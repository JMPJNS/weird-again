<EditForm Model="@Project" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label>Name: </label>
        <InputText class="form-control" id="name" @bind-Value="Project.Name" />
        <ValidationMessage For="() => Project.Name"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>Github Url: </label>
        <InputText class="form-control" id="gh" @bind-Value="Project.GithubUrl" />
        <ValidationMessage For="() => Project.GithubUrl"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>Image Url: </label>
        <InputText class="form-control" id="gh" @bind-Value="Project.ImageUrl" />
        <ValidationMessage For="() => Project.ImageUrl"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>Description: </label>
        <InputText class="form-control" id="description" @bind-Value="Project.Description" />
        <ValidationMessage For="() => Project.Description"></ValidationMessage>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</EditForm>

@code {
    [Parameter] public Project Project { get; set; } = new();
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
